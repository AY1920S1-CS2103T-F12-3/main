<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox contactId="cardPane" fx:contactId="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150"/>
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
            <padding>
                <Insets top="5" right="5" bottom="5" left="15"/>
            </padding>
            <HBox spacing="5" alignment="CENTER_LEFT">
                <Label fx:contactId="contactId" styleClass="cell_big_label">
                    <minWidth>
                        <!-- Ensures that the label text is never truncated -->
                        <Region fx:constant="USE_PREF_SIZE"/>
                    </minWidth>
                </Label>
                <Label fx:contactId="name" text="\$first" styleClass="cell_big_label"/>
            </HBox>
            <FlowPane fx:contactId="tags"/>
            <Label fx:contactId="phone" styleClass="cell_small_label" text="\$phone"/>
            <Label fx:contactId="address" styleClass="cell_small_label" text="\$address"/>
            <Label fx:contactId="email" styleClass="cell_small_label" text="\$email"/>
            <Label fx:contactId="contactId" styleClass="cell_small_label" text="\$contactId"/>
        </VBox>
    </GridPane>
</HBox>
